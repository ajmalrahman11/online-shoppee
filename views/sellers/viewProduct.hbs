<p class="fs-5">PRODUCT DETAILS</p>
<section class=" container card shadow mx-auto  p-5" >
    <div class="row  container ">
        <div class="col-lg-5 col-md-12 col-sm-12 mr-5 mb-3 mx-auto ">
            <p class="fs-6 opacity-75">Active</p>

            <img src="/product-images/{{product.products._id}}(1).jpg" class="img-fluid w-100 pb-1" id="MainImg" alt="">
            <div class="small-img-group d-flex ">
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(1).jpg" width="100%" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(2).jpg" width="100%" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(3).jpg" width="100%" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(4).jpg" width="100%" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(5).jpg" width="100%" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(6).jpg" width="100%" class="small-img" alt="">
                </div>
            </div>

        </div>
        <div class="col-md-6 float-start">
            <div class="row">
                <div class="">
                    {{#if admin}}
                    {{else}}
                    <a href="/sellers/product/edit?id={{product.products._id}}">
                        <p class="fs-6 opacity-75">Edit</p>
                    </a>
                    {{/if}}
                    <p class="fs-6 opacity-75">{{product.products.brandName}}</p>
                    <p class="fs-4 fw-bold">{{product.products.title}}</p>
                    <p class="fs-5 opacity-75">{{product.products.price}}</p>
                    <p class="fs-6 opacity-75">Gender : {{product.products.gender}}</p>
                    <div class=" ">

                        <p class="fs-6 opacity-75">Category : Casual</p>

                    </div>
                    <p class="fs-6 opacity-75">Total Stock</p>
                    <p class="fs-6 opacity-75">Stock </p>
                    <div class="d-flex">
                        {{!-- <p class="fs-6 opacity-75 ms-5">XS </p>
                        <p class="fs-6 opacity-75 ms-5">S </p>
                        <p class="fs-6 opacity-75 ms-5">M </p>
                    </div>
                    <div class="d-flex">
                        <p class="fs-6 opacity-75 ms-5">L </p>
                        <p class="fs-6 opacity-75 ms-5">XL </p>
                        <p class="fs-6 opacity-75 ms-5">XXL </p>
                    </div> --}}
                    <table>
                        <tr>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">XS </p>
                            </td>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">{{product.products.quantity.xs}} </p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">S </p>
                            </td>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">{{product.products.quantity.s}} </p>
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">M </p>
                            </td>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">{{product.products.quantity.m}} </p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">L </p>
                            </td>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">{{product.products.quantity.l}} </p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">XL </p>
                            </td>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">{{product.products.quantity.xl}} </p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="  opacity-75 ms-5">XXL </p>
                            </td>
                            <td>
                                <p class=" fw-light opacity-75 ms-5">{{product.products.quantity.xxl}} </p>
                            </td>
                        </tr>
                    </table>


                </div>

            </div>



        </div>

    </div>
    <p class="fs-4"> Description</p>
    <p class=" ">{{product.products.description}}</p>
    <p class="fs-4">Tags</p>
    <p class=" ">{{product.products.tags}}</p>

</section>
<script>
    var MainImg = document.getElementById('MainImg');
    var smallimg = document.getElementsByClassName('small-img');
    smallimg[0].onclick = function () {
        MainImg.src = smallimg[0].src;
    }
    smallimg[1].onclick = function () {
        MainImg.src = smallimg[1].src;
    }
    smallimg[2].onclick = function () {
        MainImg.src = smallimg[2].src;
    }
    smallimg[3].onclick = function () {
        MainImg.src = smallimg[3].src;
    }
    smallimg[4].onclick = function () {
        MainImg.src = smallimg[4].src;
    }
    smallimg[5].onclick = function () {
        MainImg.src = smallimg[5].src;
    }
</script>
</body>
