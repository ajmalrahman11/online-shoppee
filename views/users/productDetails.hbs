<section class="      border-0 mx-auto  p-5">
    <div class="row    ">
        <div class="col-lg-5 col-md-12 col-sm-12 mr-5 mb-3 mx-auto text-center">

            <img src="/product-images/{{product.products._id}}(1).jpg" class="img-fluid w-75  pb-1 " id="MainImg"
                alt="">
            <div class="small-img-group    d-flex  ">
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(1).jpg" width="100%" class="small-img" alt=""
                        style="max-height:10rem ;">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(2).jpg" width="100%" class="small-img" alt=""
                        style="max-height:10rem ;">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(3).jpg" width="100%" class="small-img" alt=""
                        style="max-height:10rem ;">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(4).jpg" width="100%" class="small-img" alt=""
                        style="max-height:10rem ;">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(5).jpg" width="100%" class="small-img" alt=""
                        style="max-height:10rem ;">
                </div>
                <div class="small-img-col">
                    <img src="/product-images/{{product.products._id}}(6).jpg" width="100%" class="small-img" alt=""
                        style="max-height:10rem ;">
                </div>
            </div>


        </div>
        <div class="col-md-6 float-start">
            <form id="cartSubmit" action="/cart/add/{{product._id}}" method="POST">
                <div class="row">
                    <div class="">
                        <div>
                            <b-form-rating v-model="3.4" readonly></b-form-rating>
                        </div>
 
                        <p class="fs-4 fw-bold " id="brandName">{{product.products.brandName }}</p>



                        <p class="fs-4 opacity-75 " id="title">{{product.products.title}}</p>
                        <p class="fs-4 fw-bold mb-0" id="'price">Rs.{{product.products.price}}</p>
                        <span class="mt-0 text-success">Inclusive of all taxes</span>
                        <p class="mt-4 fw-bold"> SELECT SIZE</p>



                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                            {{#if product.products.quantity.xs}}
                            <input type="radio" class="btn-check" name="size" id="xs" autocomplete="off" value="xs"
                                required>
                            <label class="btn btn-outline-primary m-1" for="xs">XS</label>
                            {{else}}
                            <input type="radio" class="btn-check" name="size" id="xs" autocomplete="off" value="xs"
                                disabled required>
                            <label class="btn btn-outline-primary m-1" for="xs">XS</label>
                            {{/if}}

                            {{#if product.products.quantity.s}}
                            <input type="radio" class="btn-check" name="size" id="s" autocomplete="off" value="s">
                            <label class="btn btn-outline-primary m-1" for="s"> S</label>
                            {{else}}
                            <input type="radio" class="btn-check" name="size" id="s" autocomplete="off" value="s"
                                disabled>
                            <label class="btn btn-outline-primary m-1" for="s"> S</label>
                            {{/if}}


                            {{#if product.products.quantity.m}}
                            <input type="radio" class="btn-check" name="size" id="m" autocomplete="off" value="m">
                            <label class="btn btn-outline-primary m-1" for="m">M</label>
                            {{else}}
                            <input type="radio" class="btn-check" name="size" id="m" autocomplete="off" value="m"
                                disabled>
                            <label class="btn btn-outline-primary m-1" for="m">M</label>
                            {{/if}}


                            {{#if product.products.quantity.l}}
                            <input type="radio" class="btn-check" name="size" id="l" autocomplete="off" value="l">
                            <label class="btn btn-outline-primary m-1" for="l">L</label>
                            {{else}}
                            <input type="radio" class="btn-check" name="size" id="l" autocomplete="off" value="l"
                                disabled>
                            <label class="btn btn-outline-primary m-1" for="l">L</label>
                            {{/if}}


                            {{#if product.products.quantity.xl}}
                            <input type="radio" class="btn-check" name="size" id="xl" autocomplete="off" value="xl">
                            <label class="btn btn-outline-primary m-1" for="xl">XL</label>
                            {{else}}
                            <input type="radio" class="btn-check" name="size" id="xl" autocomplete="off" value="xl"
                                disabled>
                            <label class="btn btn-outline-primary m-1" for="xl">XL</label>
                            {{/if}}

                            {{#if product.products.quantity.xxl}}
                            <input type="radio" class="btn-check" name="size" id="xxl" autocomplete="off" value="xxl">
                            <label class="btn btn-outline-primary m-1" for="xxl">XXL</label>
                            {{else}}
                            <input type="radio" class="btn-check" name="size" id="xxl" autocomplete="off" value="xxl"
                                disabled>
                            <label class="btn btn-outline-primary m-1" for="xxl">XXL</label>
                            {{/if}}
                        </div>


                    </div>
                    <input type="text" value="{{product.products._id}}" style="display:none ;" name="id"
                        id="product_id">


                    <input type="submit" class="btn btn-success mt-4 col-6" value="ADD TO CART">

            </form>
            <div class="">
                <p class="fs-4"> Description</p>
                <p class=" ">{{product.products.description}}</p>
            </div>

        </div>
    </div>


    <section class="container">
        <div class="container card col-3 text-center  float-start border-0">
            <h1 class="float-end  text-success">{{product.products.rating}} / 5</h1><br>
            <i class="bi bi-star-fill fs-5"></i>

            <button type="button" class="btn btn-success mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@mdo">Rate Us</button>
            {{!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@fat">Open modal for @fat</button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@getbootstrap">Open modal for @getbootstrap</button> --}}
            {{#if isAcustomer}}
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form id="submitReviews" method="post" action="/review">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                                <div class="mb-3">
                                    <label for="subject" class="col-form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" name="subject">
                                </div>
                                <div class="mb-3">
                                    <label for="review" class="col-form-label">Message:</label>
                                    <textarea class="form-control" id="review" name="review"></textarea>
                                </div>

                                {{!-- <input type="text" class="form-control" id="productId"
                                    value="{{product.products._id}}" name="productId" hidden> --}}
                                <div class="stars ">

                                    <input class="star star-5" id="star-5" type="radio" value="5" name="star" />
                                    <input type="text" value="{{product.products._id}}" name="productId" hidden>
                                    <label class="star star-5" for="star-5"></label>
                                    <input class="star star-4" id="star-4" type="radio" value="4" name="star" />
                                    <label class="star star-4" for="star-4"></label>
                                    <input class="star star-3" id="star-3" type="radio" value="3" name="star" />
                                    <label class="star star-3" for="star-3"></label>
                                    <input class="star star-2" id="star-2" type="radio" value="2" name="star" />
                                    <label class="star star-2" for="star-2"></label>
                                    <input class="star star-1" id="star-1" type="radio" value="1" name="star" />
                                    <label class="star star-1" for="star-1"></label>


                                </div>

                            </div>
                            <div class="modal-footer">
                                {{!-- <button type="submit" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Close</button> --}}
                                {{!-- <button type="button" class="btn btn-primary">Send message</button> --}}

                                <input type="submit" class="btn btn-primary modal-details" value="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <p>You didn't Purchaced This Product</p>
                        <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
            {{/if}}
        </div><br>

    </section>


    <div class="container">
        {{#each product.products.reviews}}
        <div class="card m-2">
            <div class="row">
                <div class="col-3">
                    <div class="d-flex">
                        <i class="bi bi-star-fill fs-5 ms-4 text-warning"></i>
                        <p class="mt-1 ms-1">{{this.star}}</p>
                    </div>
                    <p class="opacity-75 ms-3"> {{this.userName}}</p>
                </div>
                <div class="col-9">
                    <p> {{this.subject}}</p>
                    <p> {{this.review}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{!-- <p class="fs-4">Keywords</p>
    <p class=" ">{{product.products.keywords}}</p> --}}

</section>
