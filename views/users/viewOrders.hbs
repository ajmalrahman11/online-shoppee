 

<div class="container mt-5 shadow">
    <table class="table table-responsive" id="orders">
        {{!-- <caption> users</caption> --}}
        <thead>
            <tr>
                {{!-- <th scope="col"></th> --}}
                <th scope="col"></th>
                <th scope="col">  </th>
                <th scope="col"> </th>
                <th scope="col"> </th>
                {{!-- <th scope="col"> Title </th> --}}
                {{!-- <th scope="col"> Price</th> --}}
                {{!-- <th scope="col"> Quantity</th> --}}
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                {{!-- <th scope="row">{{@index}}</th> --}}
                <td><a href="/sellers/product/view?id={{this.orders.products.productId}}"><img class="shadow" src="/product-images/{{this.orders.products.productId}}(1).jpg" alt="" width="100"></a></td>
                <td><p>Order Id :{{this.orders.products.cart_id}}</p>
                <p>Date :{{this.orders.date}} </p>
                </td>
                <td><p class="fw-bold">Address</p>
                    <p>{{this.orders.email}}</p>
                    <p>{{this.orders.address}}</p>
                    <p>{{this.orders.state}}</p>
                    <p>{{this.orders.pincode}}</p>
                    <p>{{this.orders.paymentMethod}}</p>
                    
                </td>
                <td>
                    <p class="fw-bold">{{this.orders.products.brandName}}</p>
                    <p>{{this.orders.products.title}}</p>
                    <p class="fw-bold">Price : {{this.orders.products.price}}</p>
                    <p>Quantity : {{this.orders.products.quantity}}</p>

                </td>
                {{!-- <td>{{this.orders.products.title}}</td> --}}
                {{!-- <td></td> --}}
                {{!-- <td></td> --}}
                <td>{{#if this.orders.products.isShipped}}
                    <p class="text-success">Product Shipped</p>
                     {{#if this.orders.products.isDelivered}}
                        <p class="text-success">Product Delivered</p>
                        {{else}}
                                {{#if this.orders.products.isCancelled}}
                                <p class="text-danger">Order Cancelled</p>
                                {{else}}
                        <p class="text-danger fw-bold"><a onclick="cancelOrder('{{this.orders.products.productId}}','{{this.orders.products.orderId}}','{{this.orders.products.cart_id}}','{{this.orders.products.size}}','{{this.orders.products.quantity}}')"
                                                href=""><span class="  text-danger">Cancel Order </span></a></p>
                                 {{/if}}               
                    {{!-- <a href="/sellers/orders/deliver?id={{this.orders.products.cart_id}}"
                       
                        class="btn btn-link"><p class="fw-bold text-success">Deliver</p></a> --}}
                        {{/if}}
                    {{else}}
                     <p class="text-success">Order Placed</p>
                     {{#if this.orders.products.isCancelled}}
                                <p class="text-danger">Order Cancelled</p>
                                {{else}}
                        <p class="text-danger fw-bold"><a onclick="cancelOrder('{{this.orders.products.productId}}','{{this.orders.products.orderId}}','{{this.orders.products.cart_id}}','{{this.orders.products.size}}','{{this.orders.products.quantity}}')"
                                                href=""><span class="  text-danger">Cancel Order </span></a></p>
                                 {{/if}} 
                    {{!-- <a href="/sellers/orders/ship?id={{this.orders.products.cart_id}}" class="btn btn-link"><p class="fw-bold text-success"> Ship</p></a> --}}
                    {{/if}}
                </td>




            </tr>

            {{/each}}
        </tbody>

    </table>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        let table = new DataTable('#orders');
    });
</script>